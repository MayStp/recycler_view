<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/txt_disaster_name"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grim"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_disaster_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:text="Disaster Type"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_disaster_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_af"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:textSize="10sp"
        android:text="Afiliasi  :"
        app:layout_constraintStart_toEndOf="@+id/txt_disaster_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_disaster_type" />

    <TextView
        android:id="@+id/afiliasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="sub title fill"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/t_af"
        app:layout_constraintTop_toBottomOf="@+id/txt_disaster_type" />

    <TextView
        android:id="@+id/t_waf"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="Wafat  :"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/txt_disaster_name"
        app:layout_constraintTop_toBottomOf="@+id/t_af" />

    <TextView
        android:id="@+id/wafat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="placeholder wafat"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/t_waf"
        app:layout_constraintTop_toBottomOf="@+id/afiliasi" />
</androidx.constraintlayout.widget.ConstraintLayout>